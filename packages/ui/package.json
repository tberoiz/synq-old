{
  "name": "@repo/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --max-warnings 200",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf .turbo node_modules dist",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.11.24",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "exports": {
    "./button": {
      "types": "./dist/components/button.d.ts",
      "default": "./dist/components/button.js"
    },
    "./card": {
      "types": "./dist/components/card.d.ts",
      "default": "./dist/components/card.js"
    },
    "./input": {
      "types": "./dist/components/input.d.ts",
      "default": "./dist/components/input.js"
    },
    "./label": {
      "types": "./dist/components/label.d.ts",
      "default": "./dist/components/label.js"
    },
    "./use-toast": {
      "types": "./dist/hooks/use-toast.d.ts",
      "default": "./dist/hooks/use-toast.js"
    },
    "./toaster": {
      "types": "./dist/providers/toaster.d.ts",
      "default": "./dist/providers/toaster.js"
    },
    "./toast": {
      "types": "./dist/components/toast.d.ts",
      "default": "./dist/components/toast.js"
    },
    "./tailwind.config": "./tailwind.config.ts",
    "./postcss.config": "./postcss.config.mjs",
    "./globals.css": "./src/styles/globals.css",
    "./lib/*": "./src/lib/*.ts"
  }
}
